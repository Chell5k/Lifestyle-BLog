<% include ../../partials/boilerplate %>
<% include ../../partials/reg-header %>

  <p>
   Edit Article
  </p>

</header>

<main class="edit-one">
    <div class="view">
      <form action="/articles/<%=article.id%>?_method=PUT" method="POST">
        <p>Article # <%= article.id%></p>


        <p class="hide">Optional Open Library Book # (Post MVP): <input type="text" name="olid" value="<%=article.olid%>" /></p>

        <p>Date: <input type="date" name="article_date" value="<%=article.value_date%>" /></p>

        <p>Category Selection:
        <select name="category_id">
          <% categories.forEach((category) => { %>
            <% if (category.id === article.category_id  ) { %>
              <option selected value="<%=category.id %>"><%= category.category%> </option>
            <% } else {  %>
              <option value="<%=category.id %>"><%= category.category%> </option>
            <% } %>
          <% }) %>
        </select>
        </p>

        <p>Article:</p>
        <textarea name="article" rows="10" cols="80"><%=article.article%></textarea>
        <p><input type="submit" class="button" value="Update" /></p>
      </form>

      <form action="/articles/<%= article.id %>?_method=DELETE" method="POST">
        <input type="submit" class="button" value="Delete"</>
      </form>

    </div>
    <aside>
      <p>The Daily Cats. Just for fun.</p>
      <div class="featured"></div>
      <div class="featured"></div>
    </aside>
</main>

<% include ../../partials/end %>
