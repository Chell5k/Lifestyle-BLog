<% include ../../partials/boilerplate %>
<% include ../../partials/reg-header %>

<p>Edit Cateogry</p>
</header>


  <main>
    <div class="add">

      <form action="/categories/<%=category.id%>?_method=PUT" method="POST">
        <p>Category #: <%= category.id%></p>
        <p>Category Name: <input type="text" name="category" value="<%=category.category%>" /></p>
        <p>Category Description</p>
        <textarea name="description" rows="5" cols="80"><%=category.description%></textarea><br>
        <p><input type="submit" value="Update Category" /></p>
      </form>

      <form action="/categories/<%= category.id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete Category"/>
        <br>
      </form>

    </div>
  </main>
<% include ../../partials/end %>
